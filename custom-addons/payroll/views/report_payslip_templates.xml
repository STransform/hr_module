<?xml version="1.0" encoding="UTF-8"?>
<templates id="report_payslip">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <h2>Payslip for <t t-esc="o.employee_id.name"/></h2>
                <p>Date: <t t-esc="o.date"/></p>
                <p>Structure: <t t-esc="o.structure_id.name"/></p>
                <t t-if="o.structure_id.component_ids">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Component</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.structure_id.component_ids" t-as="comp">
                                <tr>
                                    <td><t t-esc="comp.name"/></td>
                                    <td><t t-esc="comp.amount or (comp.percentage / 100 * o.employee_id.contract_id.wage)"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <p>Total Amount: <t t-esc="o.total_amount"/></p>
            </div>
        </t>
    </t>
</templates>
