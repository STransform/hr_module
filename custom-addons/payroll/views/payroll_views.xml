<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Salary Component Views -->
    <record id="view_salary_component_tree" model="ir.ui.view">
        <field name="name">salary.component.tree</field>
        <field name="model">salary.component</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="amount"/>
                <field name="percentage"/>
            </tree>
        </field>
    </record>

    <record id="view_salary_component_form" model="ir.ui.view">
        <field name="name">salary.component.form</field>
        <field name="model">salary.component</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="calculation_method"/>
                        <field name="amount"/>
                        <field name="percentage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payroll Structure Views -->
    <record id="view_payroll_structure_tree" model="ir.ui.view">
        <field name="name">payroll.structure.tree</field>
        <field name="model">payroll.structure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_payroll_structure_form" model="ir.ui.view">
        <field name="name">payroll.structure.form</field>
        <field name="model">payroll.structure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="component_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payslip Views -->
    <record id="view_payroll_payslip_tree" model="ir.ui.view">
        <field name="name">payroll.payslip.tree</field>
        <field name="model">payroll.payslip</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_payroll_payslip_form" model="ir.ui.view">
        <field name="name">payroll.payslip.form</field>
        <field name="model">payroll.payslip</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="date"/>
                        <field name="structure_id"/>
                        <field name="total_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="payroll_menu_root" name="Payroll"/>
    <menuitem id="payroll_menu_salary_component" name="Salary Components" parent="payroll_menu_root"/>
    <menuitem id="payroll_menu_structure" name="Payroll Structures" parent="payroll_menu_root"/>
    <menuitem id="payroll_menu_payslip" name="Payslips" parent="payroll_menu_root"/>

    <!-- Actions -->
    <act_window id="action_salary_component"
        name="Salary Components"
        res_model="salary.component"
        view_mode="tree,form"
        menu_id="payroll_menu_salary_component"/>

    <act_window id="action_payroll_structure"
        name="Payroll Structures"
        res_model="payroll.structure"
        view_mode="tree,form"
        menu_id="payroll_menu_structure"/>

    <act_window id="action_payroll_payslip"
        name="Payslips"
        res_model="payroll.payslip"
        view_mode="tree,form"
        menu_id="payroll_menu_payslip"/>
</odoo>
