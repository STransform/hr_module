<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="employee_portal_group" model="res.groups">
        <field name="name">Employee Self-Service Portal</field>
        <field name="category_id" ref="base.module_category_hr"/>
    </record>

    <record id="employee_payslip_rule" model="ir.rule">
        <field name="name">Employee Payslip Access</field>
        <field name="model_id" ref="model_payroll_payslip"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('employee_portal_group'))]"/>
    </record>
</odoo>
