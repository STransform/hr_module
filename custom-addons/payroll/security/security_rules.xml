<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_payroll_manager" model="res.groups">
        <field name="name">Payroll Manager</field>
        <field name="category_id" ref="base.module_category_hr"/>
    </record>

    <record id="payroll_structure_rule" model="ir.rule">
        <field name="name">Payroll Structure Access</field>
        <field name="model_id" ref="model_payroll_structure"/>
        <field name="domain_force">[('id', '!=', 0)]</field>
        <field name="groups" eval="[(4, ref('group_payroll_manager'))]"/>
    </record>

    <record id="payroll_payslip_rule" model="ir.rule">
        <field name="name">Payslip Access</field>
        <field name="model_id" ref="model_payroll_payslip"/>
        <field name="domain_force">[('id', '!=', 0)]</field>
        <field name="groups" eval="[(4, ref('group_payroll_manager'))]"/>
    </record>
</odoo>
