<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define some sample salary components -->
    <record id="salary_component_basic" model="salary.component">
        <field name="name">Basic Salary</field>
        <field name="type">earnings</field>
        <field name="calculation_method">fixed</field>
        <field name="amount">2000.0</field>
    </record>

    <record id="salary_component_transport" model="salary.component">
        <field name="name">Transport Allowance</field>
        <field name="type">earnings</field>
        <field name="calculation_method">fixed</field>
        <field name="amount">200.0</field>
    </record>

    <record id="salary_component_tax" model="salary.component">
        <field name="name">Tax Deduction</field>
        <field name="type">deductions</field>
        <field name="calculation_method">percentage</field>
        <field name="percentage">10.0</field>
    </record>
</odoo>
